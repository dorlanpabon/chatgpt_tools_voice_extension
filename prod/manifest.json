{
  "manifest_version": 3,
  "name": "ChatGPT Tool Voice",
  "description": "Desarrollado por Juan Camilo Pabon",
  "version": "1.0",
  "icons": {
    "128": "./assets/images/icon.png",
    "16": "./assets/images/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*"
      ],
      "js": [
        "./assets/js/content.js"
      ]
    }
  ],
  "host_permissions": [
    "*://chat.openai.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/images/icon.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}